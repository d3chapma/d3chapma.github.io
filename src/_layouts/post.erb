---
layout: default
---

<% index = collections.posts.resources.map(&:data).find_index(data) %>

<%= render "post_nav", index: index, date: data.date %>

<h1><%= data.title %></h1>

<div class="tags">
    <span class="muted">
    <% data.tags.each do |tag| %>
        #<%= tag %>
    <% end %>
    </span>
</div>

<%= yield %>

<%= render "post_nav", index: index, date: data.date %>
